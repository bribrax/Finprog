<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h2>Connexion</h2>
        <form id="loginForm">
            <label for="username">Nom d'utilisateur:</label>
            <input type="text" id="username" required>
            <label for="password">Mot de passe:</label>
            <input type="password" id="password" required>
            <button type="submit">Se connecter</button>
        </form>
        <p id="errorMessage" class="error"></p>
        <p>Pas encore de compte ? <a href="register.html">Créer un compte</a></p>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // Récupérer les informations stockées
            const storedUsername = localStorage.getItem('username');
            const storedPassword = localStorage.getItem('password');

            // Vérification des identifiants
            if (username === storedUsername && password === storedPassword) {
                window.location.href = 'home.html'; // Redirige vers la page d'accueil
            } else {
                document.getElementById('errorMessage').textContent = 'Nom d\'utilisateur ou mot de passe incorrect.';
            }
        });
    </script>
</body>
</html>